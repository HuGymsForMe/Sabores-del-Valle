        "foregroundImage": "./assets/images/sdv_logo.png",
        "backgroundColor": "#E3FAF2"
      },
      "package": "com.hugymsforme.saboresdelvalle"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "plugins": [
      "expo-sqlite"
    ],
    "extra": {
      "eas": {
        "projectId": "14e8c50f-846f-44b8-b1bf-cda5d29c16b1"
